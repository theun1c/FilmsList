<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FilmsList.Views.RegisterView">
	<ScrollViewer>
		<StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
			<TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<TextBox Watermark="Логин" Text="{Binding Username}" FontSize="16" Padding="10"/>
			<TextBox Watermark="Email" Text="{Binding Email}" FontSize="16" Padding="10"/>
			<TextBox Watermark="Пароль" PasswordChar="*" Text="{Binding Password}" FontSize="16" Padding="10"/>
			<TextBox Watermark="Подтвердите пароль" PasswordChar="*" Text="{Binding ConfirmPassword}" FontSize="16" Padding="10"/>

			<Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}" FontSize="16" Padding="15,10" HorizontalAlignment="Stretch"/>
			<Button Content="Назад к входу" Command="{Binding ShowLoginCommand}" FontSize="14" Padding="15,8" HorizontalAlignment="Stretch"/>

			<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>